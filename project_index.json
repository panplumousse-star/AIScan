{
  "project_type": "single",
  "services": {
    "flutter": {
      "path": ".",
      "tech_stack": ["dart", "flutter", "sqflite", "flutter_riverpod"],
      "port": null,
      "dev_command": "flutter run",
      "test_command": "flutter test",
      "build_command": "flutter build apk"
    }
  },
  "infrastructure": {
    "docker": false,
    "database": "sqlite",
    "ci_cd": false
  },
  "conventions": {
    "linter": "flutter_lints",
    "formatter": "dart format",
    "testing": "flutter_test",
    "state_management": "flutter_riverpod",
    "database_orm": "sqflite"
  },
  "architecture": {
    "type": "feature-based",
    "structure": "lib/{features,core}",
    "patterns": [
      "Provider pattern for dependency injection",
      "Repository pattern for data access",
      "Service layer for business logic"
    ]
  }
}
